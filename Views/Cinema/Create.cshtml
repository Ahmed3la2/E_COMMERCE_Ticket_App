@model Cinema

@{ViewData["title"] = "Create New cinema";}


<div style="width:700px;margin:auto;">
    <h2 class="text-center"> Add New cinema</h2> 
    <form asp-action="Create">
       <div class="form-group text-center">
           <img id="profile_pic_pre" style="border-radius:50%;">
       </div>
      <div class="form-group">
        <label for="Profile_Picture">Profile Picture</label>
        <input asp-for="Logo" type="text" class="form-control" id="Profile_Picture" >
        <span asp-validation-for="Logo" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label for="full_name">Full Name</label>
        <input asp-for="Name" type="text" class="form-control" id="full_name">
         <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label for="Biography">Biography</label>
        <input asp-for="Description" type="text" class="form-control" id="Biography">
         <span asp-validation-for="Description" class="text-danger"></span>
      </div>
      <div class="form-group">
         <button type="submit" class="btn btn-primary">Add</button>
         <button class="btn btn-secondary float-right" asp-action="Index">Show All</button>
      </div>
    </form>
</div>
