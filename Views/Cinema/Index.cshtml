@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List of cinema";

}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table style="width:1000px">
            <thead>
                <tr class="text-center">
                    <th> @Html.DisplayNameFor(model => model.Logo) </th>
                    <th> @Html.DisplayNameFor(model => model.Name) </th>
                    <th> @Html.DisplayNameFor(model => model.Description) </th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width:130px; margin:20px">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(ModelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>

                            }
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="Cinema" asp-action="Create" class=" btn btn-success float-right  ">Add Cinema</a>
