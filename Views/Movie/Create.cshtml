@using E_ticket.Data
@model NewMovieVM


<div class="row">
    <div class="col-md-8 offset-2">
        <h2> Create movie  </h2>
        <form method="post" asp-action="Create">
          <div class="row">
             <div class="col-md-6">
                 <div class="form-group"> 
                  <label asp-for="Name"  class="control-label"></label>
                  <input asp-for="Name"  class="form-control">
                  <span class="text-danger" asp-validation-for="Name"></span>
                 </div> 
                 <div class="form-group"> 
                  <label asp-for="StartDate"  class="control-label"></label>
                  <input asp-for="StartDate" type="date"  class="form-control" />
                  <span class="text-danger" asp-validation-for="StartDate"></span>
                 </div>
                 <div class="form-group"> 
                  <label asp-for="EndDate" class="control-label"></label>
                  <input asp-for="EndDate"  type="date" class="form-control" />
                  <span class="text-danger" asp-validation-for="EndDate"></span>
                 </div> 
                 <div class="form-group"> 
                  <label asp-for="Price"  class="control-label"></label>
                  <input asp-for="Price"  class="form-control"/>
                  <span class="text-danger" asp-validation-for="Price"></span>
                 </div> 
                 <div class="form-group"> 
                  <label asp-for="ImageURL" class="control-label" ></label>
                  <input asp-for="ImageURL" class="form-control" id="img_url" />
                  <span class="text-danger" asp-validation-for="ImageURL"></span>
                 </div>
             </div>
             <div class="col-md-6">
                 <div class="form-group"> 
                  <label asp-for="CinemaId"  class="control-label"> </label>
                  <select asp-for="CinemaId"  class="form-control"asp-items="ViewBag.CinemaId"></select>
                  <span class="text-danger" asp-validation-for="CinemaId"></span>
                 </div> 
                 <div class="form-group"> 
                  <label asp-for="MovieCategory"  class="control-label"></label>
                  <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                  <span class="text-danger" asp-validation-for="MovieCategory"></span>
                 </div> 
                 <div class="form-group"> 
                  <label asp-for="ProducerId"  class="control-label"></label>
                  <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.ProducerId" ></select>
                  <span class="text-danger" asp-validation-for="ProducerId"></span>
                 </div> 
                 <div class="form-group"> 
                  <label asp-for="ActorsIds"  class="control-label"></label>
                  <select asp-for="ActorsIds" class="form-control" multiple asp-items="ViewBag.ActorId"></select>
                  <span class="text-danger"  asp-validation-for="ActorsIds"></span>
                 </div> 
             </div>
             <div class="col-md-12">
                  <div class="form-group"> 
                  <label  asp-for="Description"  class="control-label"></label>
                  <input asp-for="Description" class="form-control" multiple>
                  <span class="text-danger" asp-validation-for="Description"></span>
                 </div> 
             </div>
              <div class="col-md-4 offset-md-4">
                  <img  id="ImgPre" style="border-radius:50%; width:250px" />
              </div>
              <div class="form-group" style="width:100%">
                  <input type="submit"   class="btn btn-outline-success float-right" />
                  <a  asp-action="Index" class="btn btn-outline-secondary float-left" > Show All </a>
              </div>
         </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $("#img_url").on("change", function() {
           var output = document.getElementById("ImgPre");
           output.src = $(this).val();  
        })
    </script>
}